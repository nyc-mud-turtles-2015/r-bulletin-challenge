
<%= form_for @message, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
 <%= f.label :message %>
  <%= f.text_field :content %>
  <% hidden_field :message, :user_id, :value => session[:user_id] %>
  <% hidden_field :message, :conversation_id, :value => params[:id] %>
  <%= f.submit "Submit" %>
<%end%>

