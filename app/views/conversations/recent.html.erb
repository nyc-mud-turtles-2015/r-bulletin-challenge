<h1>Recent Messages</h1>
<div class="message-list">
<% @recent_messages.each do |message| %>
  <article>
    <p><%= message.content %></p>
    <footer>
      Posted by <%= message.user.username %>
      at <%= message.created_at %>
      in <%= link_to message.conversation.name, conversation_path(message.conversation, anchor: message.id) %>
    </footer>
  </article>
<% end %>
</div>
