<h1>Please sign in below</h1>
<% if @errors %>
<% @errors.each do |message| %>
  <%= message %>
<%end%>
<%end%>

<%= form_for @user, url: {action: "authenticate"}, html: {class: "nifty_form"} do |f| %>
 <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<%end%>
