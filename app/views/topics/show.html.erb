<h1>Conversations in "<%= @topic.name %>"</h1>
<ul>
<% @conversations.each do |conversation| %>
  <li><%= link_to conversation.name, conversation_path(conversation) %></li>
<% end %>
</ul>

<%= form_for @conversation, url: topic_conversations_path(@topic) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "Post new conversation" %>
<% end %>
