<h2>Sign into your account</h2>

<%= form_for @user, url: {action: "authenticate"} do |f|%>

  <%= render partial: '/errors', locals: {errors: @errors} %>

  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit value: 'login'%>
<% end %>
